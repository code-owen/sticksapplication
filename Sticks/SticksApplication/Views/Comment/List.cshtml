@model IEnumerable<SticksApplication.Models.Comment>
@{
    ViewBag.Title = "List";
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Comments</h1>
    </div>
</div>

<partial name="_Notification">

    @if (Model != null && Model.Any())
    {
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <td><strong>BlogPostId</strong></td>
                        <td><strong>Heading</strong></td>
                        <td> </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model)
                    {
                        <tr>
                            <td>@comment.BlogPostId</td>
                            <td>@comment.Description</td>
                            <td><a href="/Comment/Details/@comment.BlogPostId">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="container">
            <p>No blog posts were found!</p>
        </div>
    }
</partial>
