@model IEnumerable<SticksApplication.Models.Tag>
@{
    ViewBag.Title = "List";
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Tags</h1>
    </div>
</div>

<partial name="_Notification">

    @if (Model != null && Model.Any())
    {
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <td><strong>TagId</strong></td>
                        <td><strong>DisplayName</strong></td>
                        <td><strong>Action</strong></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.TagId</td>
                            <td>@tag.DisplayName</td>
                            <td><a href="/Tag/Details/@tag.TagId">View</a><a class="ms-2 text-warning" href="/Tag/Edit/@tag.TagId">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="container">
            <p>No blog posts were found!</p>
        </div>
    }

